<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.AtenderController"
      spacing="12">
      
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Atención - Cola de Triage" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="lblNombre" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Edad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="lblEdad" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Síntomas:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="lblSintomas" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Prioridad Actual:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="lblPrioridad" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Consultas:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="lblConsultas" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>
    
    <Separator />

    <Label text="Re-asignar Prioridad" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nueva Prioridad:"/>
        <ComboBox fx:id="cmbNuevaPrioridad" prefWidth="150" promptText="Seleccionar"/>
        <Button fx:id="btnActualizar" text="Actualizar y Reencolar" onAction="#onActualizarPrioridad"
                style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
    </HBox>

    <Separator />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="btnAtenderSiguiente" text="Atender siguiente" onAction="#onAtenderSiguiente" 
                style="-fx-background-color: #2183f3ff; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblMensaje" text="" />
    </HBox>

</VBox>