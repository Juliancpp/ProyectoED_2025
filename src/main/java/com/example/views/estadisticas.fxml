<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.EstadisticasController"
      spacing="20" padding="25">

    <Label text="Estadísticas del Sistema" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <GridPane hgap="20" vgap="12">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT"/>
            <ColumnConstraints halignment="RIGHT"/>
        </columnConstraints>

        <Label text="Total Pacientes:" GridPane.rowIndex="0"/>
        <Label fx:id="lblTotalPacientes" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="En Espera:" GridPane.rowIndex="1"/>
        <Label fx:id="lblEnEspera" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Promedio Tiempo de Espera:" GridPane.rowIndex="2"/>
        <Label fx:id="lblPromedioEspera" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Más Consultado:" GridPane.rowIndex="3"/>
        <Label fx:id="lblMasConsultado" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Total Consultas:" GridPane.rowIndex="4"/>
        <Label fx:id="lblTotalConsultas" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Total Inserciones:" GridPane.rowIndex="5"/>
        <Label fx:id="lblTotalInserciones" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Total Eliminaciones:" GridPane.rowIndex="6"/>
        <Label fx:id="lblTotalEliminaciones" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

    <Separator/>

    <Label text="Conteo por Niveles de Triage" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="20" vgap="12">

        <Label text="Nivel 1 - Resucitación:" GridPane.rowIndex="0"/>
        <Label fx:id="lblNivel1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Nivel 2 - Emergencia:" GridPane.rowIndex="1"/>
        <Label fx:id="lblNivel2" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Nivel 3 - Urgente:" GridPane.rowIndex="2"/>
        <Label fx:id="lblNivel3" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Nivel 4 - Menor:" GridPane.rowIndex="3"/>
        <Label fx:id="lblNivel4" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Nivel 5 - No Urgente:" GridPane.rowIndex="4"/>
        <Label fx:id="lblNivel5" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

</VBox>
